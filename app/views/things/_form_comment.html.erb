<%= form_for(@comment) do |f| %>

	<%= f.hidden_field :thing_id %>


	<div class="field">
    <%= f.text_field :description, placeholder: "Comment type..." %>
	</div>
	<div class="field">
    	<%= f.text_area :content, placeholder: "Compose new comment..." %>
	</div>
	<%= f.submit "Comment", class: "btn btn-primary" %>
<% end %>