<p id="notice"><%= notice %></p>

<h1>Listing Solutions</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Description</th>
      <th>Issues description</th>
      <th>User</th>
      <th>Thing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.kind %></td>
        <td><%= solution.description %></td>
        <td><%= solution.issues_description %></td>
        <td><%= solution.user_id %></td>
        <td><%= solution.thing_id %></td>
        <td><%= link_to 'Show', solution %></td>
        <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

